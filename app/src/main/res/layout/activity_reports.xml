<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:id="@+id/Admin_Drawer"
    android:background="@drawable/bgg"
    tools:context=".Admin.Reports">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:orientation="vertical">

      <androidx.appcompat.widget.Toolbar
          android:id="@+id/Admin_Toolbar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/gradientbackground"
          android:visibility="visible">

        <ImageView
            android:id="@+id/AdminNavImage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Generate Reports"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

      </androidx.appcompat.widget.Toolbar>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp"
  >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

      <androidx.cardview.widget.CardView
          android:id="@+id/ViewRegisteredUser"
          android:layout_width="1dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_margin="5dp"
          app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:backgroundTint="@color/teal_200"
            android:orientation="vertical"
            android:padding="20dp">

          <ImageView
              android:layout_width="106dp"
              android:layout_height="107dp"
              android:layout_gravity="center"
              android:src="@drawable/userreport" />


          <View
              android:layout_width="match_parent"
              android:layout_height="3dp"
              android:background="@color/black" />

          <TextView
              android:id="@+id/ViewRegisteredUserTV"
              android:layout_width="wrap_content"
              android:layout_height="62dp"
              android:layout_gravity="center"
              android:gravity="center"
              android:text="Registered Users"
              android:textAlignment="center"
              android:textColor="@color/black"
              android:textSize="18sp"
              android:textStyle="bold" />


        </LinearLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/BookingReport"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:layout_weight="1"
          app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:backgroundTint="@color/teal_200"
            android:orientation="vertical"
            android:padding="20dp">

          <ImageView
              android:layout_width="106dp"
              android:layout_height="107dp"
              android:layout_gravity="center"
              android:src="@drawable/totaltripsreport" />

          <View
              android:layout_width="match_parent"
              android:layout_height="3dp"
              android:background="@color/black" />

          <TextView
              android:id="@+id/BookingReportTV"
              android:layout_width="112dp"
              android:layout_height="56dp"
              android:layout_gravity="center"
              android:gravity="center"
              android:text="Total Trip Bookings"
              android:textColor="@color/black"
              android:textSize="18sp"
              android:textStyle="bold" />

        </LinearLayout>

      </androidx.cardview.widget.CardView>
    </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="250dp"
      android:layout_below="@+id/toolbar"
      android:orientation="horizontal"
      android:weightSum="2"
      app:layout_constraintBottom_toBottomOf="@id/toolbar"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar">

    <androidx.cardview.widget.CardView
        android:id="@+id/DatwiseReport"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="5dp"
        app:cardCornerRadius="20dp">


    <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="230dp"
          android:backgroundTint="@color/teal_200"
          android:orientation="vertical"
          android:padding="20dp">

        <ImageView
            android:layout_width="106dp"
            android:layout_height="107dp"
            android:layout_gravity="center"
            android:src="@drawable/datereport" />


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/DatwiseReportTV"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Datewise Booking"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


      </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/TravelAgencyReport"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="5dp"
        app:cardCornerRadius="20dp">

    <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="230dp"
          android:backgroundTint="@color/teal_200"
          android:orientation="vertical"
          android:padding="20dp">

        <ImageView
            android:layout_width="106dp"
            android:layout_height="107dp"
            android:layout_gravity="center"
            android:src="@drawable/tareport" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/TravelAgencyReportTV"
            android:layout_width="143dp"
            android:layout_height="60dp"
            android:layout_gravity="center"

            android:gravity="center"
            android:text="Travel Agency Report"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

      </LinearLayout>

    </androidx.cardview.widget.CardView>
  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/toolbar"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

      <androidx.cardview.widget.CardView
          android:id="@+id/FeedbackReport"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:layout_weight="1"
          app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:backgroundTint="@color/teal_200"
            android:orientation="vertical"
            android:padding="20dp">

          <ImageView
              android:layout_width="106dp"
              android:layout_height="107dp"
              android:layout_gravity="center"
              android:src="@drawable/feedbackreport"
              />


          <View
              android:layout_width="match_parent"
              android:layout_height="3dp"
              android:background="@color/black" />

          <TextView
              android:id="@+id/FeedbackReportTV"
              android:layout_width="115dp"
              android:layout_height="58dp"
              android:layout_gravity="center"
              android:gravity="center"
              android:text="Feedback Report"
              android:textAlignment="center"
              android:textColor="@color/black"
              android:textSize="18sp"
              android:textStyle="bold" />


        </LinearLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/RegisteredTrips"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:layout_weight="1"
          app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:backgroundTint="@color/teal_200"
            android:orientation="vertical"
            android:padding="20dp">

          <ImageView
              android:layout_width="106dp"
              android:layout_height="107dp"
              android:layout_gravity="center"
              android:src="@drawable/tripreprt" />

          <View
              android:layout_width="match_parent"
              android:layout_height="3dp"
              android:background="@color/black" />

          <TextView
              android:id="@+id/RegisteredTripsTV"
              android:layout_width="115dp"
              android:layout_height="60dp"
              android:layout_gravity="center"
              android:gravity="center"
              android:text="Registered Trips"
              android:textColor="@color/black"
              android:textSize="18sp"
              android:textStyle="bold" />

        </LinearLayout>

      </androidx.cardview.widget.CardView>
    </LinearLayout>
  </LinearLayout>

  </LinearLayout>

  </ScrollView>



  <com.google.android.material.navigation.NavigationView
      android:id="@+id/Anav_menuU"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_gravity="start"
      app:headerLayout="@layout/navheader"
      app:menu="@menu/admin_menu">

  </com.google.android.material.navigation.NavigationView>
  </androidx.drawerlayout.widget.DrawerLayout>
