<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="visible"
    tools:openDrawer="start"
    android:id="@+id/Admin_Drawer"

    tools:context=".Admin.Admin_Dashboard"
    tools:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/Admin_Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradientbackground"
            android:visibility="visible">

            <ImageView
                android:id="@+id/AdminNavImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_menu_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="Admin Dashboard"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="145dp"
           android:layout_marginTop="60dp"
           android:orientation="vertical"
           android:weightSum="2">

           <androidx.cardview.widget.CardView
               android:id="@+id/Manage_User"
               android:layout_width="320dp"
               android:layout_height="120dp"
               android:layout_gravity="center"
               android:layout_margin="20dp"
               android:backgroundTint="#e4f7eb"
               app:cardCornerRadius="20dp"
               android:layout_marginTop="60dp"


               android:background="@color/white">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal">

                   <ImageView
                       android:layout_width="153dp"
                       android:layout_height="match_parent"
                       android:src="@drawable/customeradmin"></ImageView>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="40dp"
                       android:text="Manage Tourists"
                       android:textSize="20sp">

                   </TextView>
               </LinearLayout>


           </androidx.cardview.widget.CardView>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="127dp"
           android:orientation="vertical"
           android:weightSum="2">

           <androidx.cardview.widget.CardView
               android:id="@+id/Manage_Trips"
               android:layout_width="320dp"
               android:layout_height="120dp"
               android:layout_gravity="center"
               app:cardCornerRadius="20dp"
               android:backgroundTint="#e4f7eb"
               android:background="@color/white"

               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"

                   >

                   <ImageView
                       android:layout_width="153dp"
                       android:layout_height="match_parent"
                       android:src="@drawable/tripssadmin"></ImageView>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="40dp"
                       android:text="Manage Trips"
                       android:textSize="20sp">

                   </TextView>
               </LinearLayout>

           </androidx.cardview.widget.CardView>

       </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:orientation="vertical"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/Manage_TA"
            android:layout_width="320dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#e4f7eb"
            android:background="@drawable/trips"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                >

                <ImageView
                    android:layout_width="153dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/taadminn"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Manage Travel Agencies"
                    android:gravity="center"
                    android:textSize="20sp">

                </TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:orientation="vertical"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/Manage_Feedback"
            android:layout_width="320dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#e4f7eb"
            android:background="@drawable/trips"

            >

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="120dp"
                android:orientation="horizontal"

                >

                <ImageView
                    android:layout_width="153dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/feedbackadmiinn"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="View Feedbacks"
                    android:textSize="20sp">

                </TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:orientation="vertical"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/Manage_Reports"
            android:layout_width="320dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#e4f7eb"
            android:background="@drawable/trips"

            >

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="120dp"
                android:orientation="horizontal"

                >

                <ImageView
                    android:layout_width="153dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/reportsadminnn"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Manage Reports"
                    android:textSize="20sp">

                </TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/Anav_menuU"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navheader"
        app:menu="@menu/admin_menu">

    </com.google.android.material.navigation.NavigationView>
   </androidx.drawerlayout.widget.DrawerLayout>


