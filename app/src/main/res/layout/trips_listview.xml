<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/drawable_list"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/Image_LView"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/cutomm"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/txtNamee"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/Image_LView"
        android:text="Name" />

    <TextView
        android:id="@+id/txtDess"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNamee"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/Image_LView"
        android:lines="5"
        android:maxLength="50"
        android:maxLines="2"
        android:singleLine="true"
        android:text="Des" />
    </RelativeLayout>
