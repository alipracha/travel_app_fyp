<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:paddingBottom="5dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:background="@drawable/drawable_list"
    android:layout_height="match_parent"
    android:backgroundTint="#f2f7f4"

    >

    <ImageView

        android:id="@+id/C_Image_LV"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:src="@drawable/dppp" />

    <TextView
        android:id="@+id/C_txtName"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/C_Image_LV"
        android:fontFamily="sans-serif-black"
        android:text="Name"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/C_Email"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/C_txtName"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/C_Image_LV"
        android:maxLength="50"
        android:maxLines="2"
        android:singleLine="true"
        android:text="Des" />


</RelativeLayout>
</RelativeLayout>
