<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgg"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Our Mission"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To promote tourism in Pakistan and increase the economy of Pakistan through promoting beautiful Areas"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
                ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="In Case of any Query, Feel Free to Contact Admin"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
        ></TextView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: admin@gmail.com"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
              ></TextView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone: 03165438680"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        ></TextView>
</LinearLayout>