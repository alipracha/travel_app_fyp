<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment2"
    android:id="@+id/drawer_Ar"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <ImageView
                android:id="@+id/nav_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_menu_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Screen" />

        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <androidx.cardview.widget.CardView
                android:id="@+id/ViewRegisteredUser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/teal_200"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="106dp"
                        android:layout_height="107dp"
                        android:layout_gravity="center"
                        android:src="@drawable/fyplogo" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/ViewRegisteredUserTV"
                        android:layout_width="150dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:text="Registered Users"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/BookingReport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="218dp"
                    android:backgroundTint="@color/teal_200"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="106dp"
                        android:layout_height="107dp"
                        android:layout_gravity="center"
                        android:src="@drawable/fyplogo" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/BookingReportTV"
                        android:layout_width="112dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:text="Total Trip Bookings"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="282dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <androidx.cardview.widget.CardView
                android:id="@+id/DatwiseReport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/teal_200"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="106dp"
                        android:layout_height="107dp"
                        android:layout_gravity="center"
                        android:src="@drawable/fyplogo" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/DatwiseReportTV"
                        android:layout_width="98dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:text="Datewise Booking"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/TravelAgencyReport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="218dp"
                    android:backgroundTint="@color/teal_200"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="106dp"
                        android:layout_height="107dp"
                        android:layout_gravity="center"
                        android:src="@drawable/fyplogo" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/TravelAgencyReportTV"
                        android:layout_width="112dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:text="Travel Agency Report"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="282dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <androidx.cardview.widget.CardView
                android:id="@+id/FeedbackReport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/teal_200"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="106dp"
                        android:layout_height="107dp"
                        android:layout_gravity="center"
                        android:src="@drawable/fyplogo" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/FeedbackReportTV"
                        android:layout_width="115dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:text="Feedback Report"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/RegisteredTrips"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="218dp"
                    android:backgroundTint="@color/teal_200"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="106dp"
                        android:layout_height="107dp"
                        android:layout_gravity="center"
                        android:src="@drawable/fyplogo" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/RegisteredTripsTV"
                        android:layout_width="112dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:text="Registered Trips"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view_Ar"
        app:menu="@menu/admin_menu"
        app:headerLayout="@layout/navheader"
        android:layout_gravity="start">

    </com.google.android.material.navigation.NavigationView>



</androidx.drawerlayout.widget.DrawerLayout>